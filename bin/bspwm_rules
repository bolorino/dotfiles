#! /bin/sh

if ! rulc -l > /dev/null ; then
    (setsid ruld &)
    while ! rulc -l > /dev/null ; do
sleep 0.1
    done
fi
rules=$(rulc -l)
if [ -z "$rules" ] ; then
	rulc -a 'class=="Firefox"' 'desktop=^8, follow=on'
	rulc -a 'class=="sublime_text"' 'desktop=^3, follow=on'
	rulc -a 'class=="Gimp"' 'desktop=^4 follow=on floating=on'
	rulc -a 'class=="Chromium"' 'desktop=^9'
    rulc -a 'class=="Qbittorrent"' 'desktop=^10'
fi
