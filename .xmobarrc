Config { font = "-*-terminus-*-*-*-*-12-*-*-*-*-*-*-u"
       , bgColor = "#000000"
       , fgColor = "#AFAF87"
       , position = TopW L 90
       , lowerOnStart = True 
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 15
                    , Run Cpu ["-L","3","-H","50","--normal","#429942","--high","#A36666"] 15
                    , Run Weather "LEMG" ["-t","<station>: <tempC>C","-L","14","-H","28","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Memory ["-t","Mem: <usedratio>%"] 15
    		        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %LEMG% | %cpu% | %memory% | %eth0% | %date%"
       }

