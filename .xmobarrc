Config { font = "xft:Mensch for Powerline:pixelsize=12:antialias=true"
       , bgColor = "#27241E"
       , fgColor = "#A1977D"
       , position = TopW L 90
       , lowerOnStart = True 
       , commands = [ Run Network "enp5s0" ["-L","0","-H","32","--normal","lightgreen","--high","lightred"] 15
                    , Run Com "ncmpcpp" ["--now-playing"] "music" 20
                    , Run Cpu ["-L","3","-H","50","--normal","lightgreen","--high","lightred"] 15
                    , Run Weather "LEMG" ["-t","<station>: <tempC>C","-L","14","-H","28","--normal","lightgreen","--high","red","--low","lightblue"] 36000
                    , Run Memory ["-t","Mem: <usedratio>%"] 15
    		        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{▶ %music% ❘ ❲%LEMG%❳ <fc=#8A734A>❭</fc> %cpu% <fc=#8A734A>❭</fc> %memory% <fc=#8A734A>❭</fc> %enp5s0% <fc=#8A734A>❭</fc> <fc=#A89871>%date%</fc>"
       }

