#
# bspwm hotkeys
#

# Quit
super + alt + Escape
    killall -q polybar; ~/bin/killapps.sh; bspc quit

# Close window
super + w
    bspc node -c

# Change to monocle/tiled
super + t
    bspc desktop -l next

# Float, Fullscreen
super + {s,f}
    bspc node -t '~{floating,fullscreen}'

# Alternate last node/desktop
super + {comma,Tab}
    bspc {node,desktop} -f last

# Swap with the bigger node
super + m
    bspc node -s biggest

# Smart move
super + shift + {h,j,k,l}
	~/bin/bspwm_smart_move {west,south,north,east}

# Next/Prev node
super + {_,shift + }c
    bspc node -f {next,prev}

# Split windows to west, south, norht, east
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Cancel split window
super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

# Move to desktop
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# Send to desktop
super + ctrl + {1-9,0}
    bspc node -d ^{1-9,10}

# Send to desktop and go
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d '^{1-9,10}'; bspc node -f ${id}
    
# Make window sticky
super + g
    bspc node --flag sticky -f

# Toggle Telegram
alt + c
    ~/bin/bspwm-toggle-visibility TelegramDesktop telegram-desktop

# Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu \
        -location 1 \
        -m -3 \
        -no-show-icons \
        -theme slate

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#
# wm independent hotkeys
#

# Launch terminal
super + Return
	alacritty

# Launch Rofi
super + p
    rofi -show run -theme slate

# Show Windows
super + e
    rofi -show window -theme slate

# Restaurar pipewire
ctrl + alt + a
    restart_audio
    
# Restaurar Polybar
ctrl + shift + p
	killall -q polybar; ~/.config/polybar/launch.sh &

# Capturar pantalla
ctrl + Print
    ~/bin/capturar-pantalla

# Music Play/Pause
XF86AudioPlay
    mpc toggle 

#Volume down
XF86AudioLowerVolume
   wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-

# Change wallpaper
super + a
    ~/bin/wallpaper.sh

# Show help
super + F1
    ~/bin/sxhkd-help.sh

# Suspend 
super + ctrl + s
    systemctl suspend 

# Make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
