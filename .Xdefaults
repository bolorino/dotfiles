#include "$HOME/.colors/colors"

URxvt.font:         xft:Mensch for Powerline:size=11:hinting=slight:antialias=true
URxvt.boldFont:     xft:Mensch for Powerline:size=12:hinting=slight:antialias=true

URxvt.iconFile:     /usr/share/icons/Humanity/apps/24/terminal.svg

URxvt.perl-lib: /usr/lib/urxvt/perl/
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

URxvt*saveLines: 32767

Xft*dpi: 96
Xft*antialias: true

URxvt.scrollBar: false
Urxvt*scrollTtyKeypress: true
Urxvt*scrollTtyOutput: false
Urxvt*scrollWithBuffer: false
Urxvt*scrollstyle: plain
Urxvt*secondaryScroll: true

