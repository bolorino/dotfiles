#
# bspwm hotkeys
#

super + alt + Escape
    pkill -x panel; killapps; bspc quit

super + w
    bspc node -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc node -t '~{floating,fullscreen}'

super + {grave,Tab}
    bspc {node,desktop} -f last

#super + apostrophe
#    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc node {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc node -w last.manual

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
    bspc node -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc node -e {west,south,north,east} push

super + alt + shift + {h,j,k,l}
    bspc node -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Monitors
super + e
    bspc monitor -f next

# Super key changes left monitor desktop
#super + {_,shift + }{1-9,0}
#    bspc {desktop -f, window -d} {i, ii, iii, iv, v, vi, vii, viii, ix, x}

# super + alt key changes right monitor desktops
super + alt + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} {Desktop2, Edit, Mail, Virtual, Vector}

#
# wm independent hotkeys
#

super + Return
    roxterm

super + p
    dmenu_run -l 30 -fn 'xft:Mensch for Powerline:size=10:hinting=slight:antialias=true' -nb '#2E3436' -nf '#CFE1FF' -sb '#175CB4'

XF86Calculator
    gnome-calculator

# Change wallpaper
super + a
    wallpaper.sh

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
